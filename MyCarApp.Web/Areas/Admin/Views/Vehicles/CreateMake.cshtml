@model VehicleMakeCreationBindingModel
@{
    ViewData["Title"] = "Create Make";
}

<h2> @ViewData["Title"]</h2>

<form asp-area="Admin" asp-controller="Vehicles" asp-action="CreateMake" method="post" class="form-horizontal">
    @Html.EditorForModel()
    <hr />
    <div class="form-group col-sm-10" id="item-list">
        <a href="#" id="add"><i class="fa fa-plus"></i> Add Model</a>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="Vehicles" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>



@section Scripts {
    <script>

        $(function () {
            $('#add').on('click', function () {
                var i = $(".items").length;
                var nameInput = '<input type="text" class="items form-control" name="VehicleModels[' + i + '].Name" placeholder="Model Name"/>';
                $("#item-list").append(nameInput);
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}