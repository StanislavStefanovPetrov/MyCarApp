@model ChangeUserPasswordBindingModel
@{
    ViewData["Title"] = "Change password";
}

<h2>@ViewData["Title"] for @Model.Email</h2>
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            @Html.HiddenFor(Model => Model.Id)
            @Html.HiddenFor(Model => Model.Email)
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.OldPassword"></label>
                <input asp-for="@Model.OldPassword" class="form-control" />
                <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewPassword"></label>
                <input asp-for="@Model.NewPassword" class="form-control" />
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Update password</button>
            <a asp-area="@AppUtilities.AdministratorArea" asp-controller="Users" asp-action="Index" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
