@model SetUserToBannedBindingModel
@{
    ViewData["Title"] = "Ban User";
}

<h2>@ViewData["Title"]: @Model.Email</h2>
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            @Html.HiddenFor(Model => Model.Id)
            @Html.HiddenFor(Model => Model.Email)
            <h2 class="text-danger">This action will ban the user for some time. Are you sure you want to proceed?</h2>
            <button type="submit" class="btn btn-default"><i class="fas fa-ban"></i> Set to banned</button>
            <a asp-area="@AppUtilities.AdministratorArea" asp-controller="Users" asp-action="Index" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
