@model IndexAdvertisementAllViewModel

<style>
    img {
        position: relative;
        float: left;
        width: 300px;
        height: 300px;
        border: 1px solid #ddd;
        border-radius: 2%;
        padding: 1%;
    }
</style>

<tr>
    <td>
        <a asp-page="./AdvertisementDetails" asp-route-id="@Model.Id">
            <span class="control-label col-md-6 h2">
                <img src="~/Files/Pictures/@Model.Image" class="custom-img-details" />
            </span>
        </a>
    </td>
    <td>
        <div class="form-group">
            <div class="col">
                <a asp-page="./AdvertisementDetails" asp-route-id="@Model.Id">
                    <span class="control-label col-md-6 h2  text-capitalize">
                        @Html.DisplayFor(m => m.Title)
                    </span>
                </a>
            </div>
            <div class="col">
                <span class="control-label col-md-6 h3">
                    @Html.DisplayFor(m => m.Vehicle)
                </span>
                <br />
                @Html.LabelFor(model => model.PublishDate, new { @class = "h6" })
                <br />
                @Html.DisplayFor(m => m.PublishDate)
            </div>
        </div>
    </td>
