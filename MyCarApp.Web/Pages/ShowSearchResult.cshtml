@page
@model ShowSearchResultModel

@{
    ViewData["Title"] = "Search Results";
}

<h2>@ViewData["Title"]</h2>

<a asp-area="" asp-page="Search" class="btn btn-success"><i class="fas fa-search"></i> New Search</a>

<hr />
@if (!Model.allAdvertisements.Any())
{
    <h3>No vehicles were found!</h3>
}
else
{ <table class="table table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Info</th>
            </tr>
        </thead>
        <tbody>
            @Html.DisplayFor(m => m.allAdvertisements)
        </tbody>
    </table>
}